#!/bin/bash
# Build a devuan chroot using debootstrap.

chrootLabel="ubuntu-14.04-desktop"

. .fpStarter

chrootRelease="trusty"
chrootMirror="http://ports.ubuntu.com/ubuntu-ports/"
packages="make,gcc,less,vim,netbase,wget,binutils,dpkg,apt,apt-utils,e2fsprogs"

chrootVars
chrootBuildAll

chrootVars

