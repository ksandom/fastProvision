#!/bin/bash
# Build a devuan chroot using debootstrap.

chrootLabel="ubuntu-16.04-desktop"

. .fpStarter

chrootRelease="xenial"
chrootMirror="http://gb.archive.ubuntu.com/ubuntu/"
packages="make,gcc,less,vim,netbase,wget,binutils,dpkg,apt,apt-utils,nmon,e2fsprogs,$packagesDevuan"

chrootVars
chrootBuildAll

chrootVars

